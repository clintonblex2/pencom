@using PENCOMSERVICE
@using PENCOMSERVICE.Models.ViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PENCOMSERVICE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #e3f2fd;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PENCOMSERVICE</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="margin-right:5px" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="margin-left:0px;margin-right:5px" asp-area="" asp-controller="Home" asp-action="SubmittedData">Submitted Data</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="margin-left:0px;margin-right:5px" asp-area="" asp-controller="Home" asp-action="AwaitingStatusData">Awaiting Status Data</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="margin-left:0px;margin-right:10px" asp-area="" asp-controller="Home" asp-action="AcceptedData">Accepted Data</a>
                        </li>
                    </ul>

                </div>
                <form class="form-inline my-2 my-lg-0" asp-controller="Home" asp-action="Search" method="get">
                    <input class="form-control mr-sm-2 text-info" name="searchString" type="search" placeholder="Enter Pencom PIN" aria-label="Search" />
                    <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        
        <main role="main" class="pb-3">
            @Html.Partial("_StatusMessages")
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - PENCOMSERVICE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
